{
  "name": "elephant",
  "workspaces": [
    "apps/shell",
    "apps/creator",
    "api",
    "mock/generated",
    "mock/custom"
  ],
  "scripts": {
    "serve:shell": "npm run serve --workspace=apps/shell",
    "build:shell": "npm run build --workspace=apps/shell",
    "serve:creator": "npm run serve --workspace=apps/creator",
    "build:creator": "npm run build --workspace=apps/creator",
    "build:shell:mobile": "npm run build --workspace=apps/shell && npx cap copy",
    "open:shell:android": "npm run build --workspace=apps/shell && npx cap copy && npx cap add android && npx cap open android",
    "open:shell:ios": "npm run build --workspace=apps/shell && npx cap copy && npx cap add ios && npx cap open ios",
    "test": "jest",
    "e2e": "npx cypress run --browser chrome",
    "api:generate": "openapi-generator-cli generate",
    "api:generate:templates": "openapi-generator-cli author template -g nodejs-express-server -o ./openapi-generator/mock/templates",
    "mock:start": "npm run start --workspace=mock/generated"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@mocks-server/main": "^4.1.0",
    "@openapitools/openapi-generator-cli": "^2.25.0",
    "@rsbuild/core": "^1.6.2",
    "@rsbuild/plugin-react": "^1.4.1",
    "@rsbuild/plugin-sass": "^1.4.0",
    "@swc/core": "^1.15.0",
    "@swc/jest": "^0.2.39",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "cypress": "^15.6.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@capacitor/ios": "^7.4.4",
    "@module-federation/rsbuild-plugin": "^0.21.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0"
  }
}
